<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Rawati" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lightgreen</item>
        <item name="colorPrimaryVariant">@color/darkgreen</item>
        <item name="colorOnPrimary">@color/green</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lightgreen</item>
        <item name="colorSecondaryVariant">@color/darkgreen</item>
        <item name="colorOnSecondary">@color/green</item>
        <!--Statusbar color-->
        <item name="android:statusBarColor" tools:targetApi="1">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Rawati_NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lightgreen</item>
        <item name="colorPrimaryVariant">@color/darkgreen</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lightgreen</item>
        <item name="colorSecondaryVariant">@color/darkgreen</item>
        <item name="colorOnSecondary">@color/green</item>
        <!--Statusbar color-->
        <item name="android:statusBarColor" tools:targetApi="1">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>
</resources>